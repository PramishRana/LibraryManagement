@model LibraryManagement.ViewModel.AddBookViewModel;

<h2 class="my-4">Add Books</h2>

@using (Html.BeginForm("AddBook", "Library", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Title, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>



    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.ImageUrl, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", placeholder = "ImageUrl" })
    </div>

    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Description, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
    </div>
    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Author, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placeholder = "Author" })
    </div>
    <div class="d-flex align-content-center ">

        <button type="submit" class="btn btn-primary">Add Book</button>
        <a href="@Url.Action("List", "Library")" class="btn btn-primary ms-4">Back to Book List</a>

    </div>
}