@model LibraryManagement.ViewModel.LibraryListViewModel;
<div class="d-flex justify-content-between my-3">
    <h2>All Books   </h2>

    <a href="@Url.Action("AddBook", "Library")" class="btn btn-primary mt-2">Add Books</a>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">



    @foreach (var books in Model.Books)
    {
        <div class="col">


            <div class="card book-card">
                <img src="@books.ImageUrl" class="card-img-top img" alt="@books.Title">
                <div class="card-body book-button">

                    <div class="d-flex  flex-column justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="pie-link text-decoration-none text-dark">@books.Title</a>

                        </h2>
                        <h4>@books.Description</h4>
                        <h6>~@books.Author</h6>

                    </div>
                    <div class="d-flex justify-content-between">

                        <a href="@Url.Action("UpdateBook", "Library", new { id = books.BookId })" class="btn btn-primary mt-2">Edit Book</a>


                        <a href="@Url.Action("DeleteBook", "Library", new { id =books.BookId  })" class="btn btn-danger mt-2">Delete</a>
                    </div>

                </div>
            </div>

        </div>

    }
</div>